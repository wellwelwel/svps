{
  "include": ["src"],
  "compilerOptions": {
    "rootDir": "./",
    "target": "ES2016",
    "module": "CommonJS",
    "moduleResolution": "Node",
    "isolatedModules": true,
    "allowJs": false,
    "strict": true,
    "alwaysStrict": true,
    "strictFunctionTypes": true,
    "noUnusedLocals": true,
    "noImplicitAny": true,
    "removeComments": false,
    "sourceMap": false,
    "declaration": true,
    "esModuleInterop": true,
    "noEmit": true,
    "noEmitOnError": true
  }
}
