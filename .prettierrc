{
   "printWidth": 120,
   "tabWidth": 3,
   "semi": true,
   "singleQuote": true,
   "quoteProps": "as-needed",
   "jsxSingleQuote": true,
   "trailingComma": "es5",
   "bracketSpacing": true,
   "bracketSameLine": false,
   "arrowParens": "always",
   "proseWrap": "preserve",
   "htmlWhitespaceSensitivity": "css",
   "endOfLine": "auto",
   "embeddedLanguageFormatting": "auto",
   "singleAttributePerLine": false,
   "overrides": [
      {
         "files": "*.yml",
         "options": {
            "tabWidth": 2
         }
      }
   ]
}
