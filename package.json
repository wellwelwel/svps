{
  "name": "svps",
  "version": "2.0.0",
  "main": "./lib/index.js",
  "type": "module",
  "dependencies": {
    "@types/ssh2": "^1.11.13",
    "ssh2": "^1.14.0"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^6.1.0",
    "@typescript-eslint/parser": "^6.1.0",
    "eslint": "^8.45.0",
    "eslint-import-resolver-typescript": "^3.5.5",
    "eslint-plugin-import": "^2.27.5",
    "packages-update": "^1.2.1",
    "prettier": "^3.0.0",
    "typescript": "^5.1.6"
  },
  "bin": {
    "svps": "bin/index.js"
  },
  "scripts": {
    "build": "rm -rf ./bin ./lib; npm run eslint:fix; npm run prettier:fix; npx tsc && npx tsc -p examples/tsconfig.json",
    "patch": "npm run update; npm audit fix; npm version patch --no-git-tag-version",
    "minor": "npm run update; npm audit fix; npm version minor --no-git-tag-version",
    "major": "npm run update; npm audit fix; npm version major --no-git-tag-version",
    "update": "npx npu; npm i --ignore-scripts",
    "eslint:checker": "npx eslint . --ext .js,.ts",
    "eslint:fix": "npx eslint . --fix",
    "prettier:checker": "npx prettier --check .",
    "prettier:fix": "npx prettier --write .github/workflows/*.yml .github/assets/.svpsrc.js/*.js examples/**/*.ts *.md resources/local-module",
    "docker:reset": "docker rm --force test-svps >/dev/null 2>&1 || true",
    "docker:run": "docker run -d --name test-svps --privileged -p ${PORT:-22}:${PORT:-22} -e PORT=${PORT:-22} --restart always wellwelwel/vps:latest",
    "tests:docker": "npm run docker:reset; npm run docker:run",
    "pretests:create": "mkdir -p ./tests && cd ./tests && echo '{}' | cat > ./package.json && npm i file:../",
    "tests:create": "cd ./tests && npx svps create",
    "pretests:connection": "rm -rf ./tests/.svpsrc.js; cp -f ./.github/assets/.svpsrc.js/basic-connection.js ./tests/.svpsrc.js",
    "tests:connection": "cd ./tests &&  npx svps mount",
    "pretests:desktop": "rm -rf ./tests/.svpsrc.js; cp -f ./.github/assets/.svpsrc.js/desktop.js ./tests/.svpsrc.js",
    "tests:desktop": "cd ./tests &&  npx svps mount",
    "pretests:mount": "rm -rf ./tests/.svpsrc.js; cp -f ./.github/assets/.svpsrc.js/mount.js ./tests/.svpsrc.js",
    "tests:mount": "cd ./tests && npx svps mount",
    "tests:reset": "npm run docker:reset; rm -rf ./tests",
    "pretests": "rm -rf ./tests",
    "tests": "npm run tests:docker && npm run tests:create && npm run tests:connection && npm run tests:mount && npm run tests:reset",
    "posttests": "rm -rf ./tests"
  },
  "author": "https://github.com/wellwelwel",
  "license": "MIT",
  "description": "ðŸš€ An easier tool to automate the setup and pre-settings of your Ubuntu VPS",
  "engines": {
    "node": ">=14.5.0",
    "npm": ">=7.0.2"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/wellwelwel/svps.git"
  },
  "bugs": {
    "url": "https://github.com/wellwelwel/svps/issues"
  },
  "homepage": "https://github.com/wellwelwel/svps#readme",
  "keywords": [
    "apache",
    "cli",
    "cronjob",
    "crontab",
    "ufw",
    "sftp",
    "vsftpd",
    "mysql",
    "php",
    "ssh",
    "ssh2",
    "ubuntu",
    "virtual-host",
    "vps",
    "vps-setup",
    "vps-desktop",
    "rdp",
    "remote-desktop",
    "remote-desktop-protocol",
    "docker"
  ],
  "files": [
    "bin",
    "lib",
    "resources"
  ]
}
