{
   "name": "svps",
   "version": "1.2.1",
   "main": "./lib/index.js",
   "type": "module",
   "dependencies": {
      "@types/ssh2": "^1.11.8",
      "ssh2": "^1.11.0"
   },
   "devDependencies": {
      "packages-update": "^1.2.1",
      "typescript": "^5.0.2"
   },
   "bin": {
      "svps": "bin/index.js"
   },
   "scripts": {
      "build": "rm -rf ./bin ./lib; npx tsc;",
      "patch": "npm run update; npm audit fix; npm version patch --no-git-tag-version;",
      "minor": "npm run update; npm audit fix; npm version minor --no-git-tag-version;",
      "major": "npm run update; npm audit fix; npm version major --no-git-tag-version;",
      "update": "npx npu; npm i --ignore-scripts;",
      "docker:reset": "docker rm --force test-vps >/dev/null 2>&1 || true",
      "docker:run": "docker run -d --name test-vps --privileged -p 22:22 --restart always wellwelwel/vps:latest",
      "tests:docker": "npm run docker:reset; npm run docker:run",
      "pretests:install": "rm -rf ./tests; npm run build; npm i",
      "tests:install": "mkdir -p ./tests && cd ./tests && echo '{\"type\": \"module\"}' | cat > ./package.json && npm i file:../",
      "tests:create": "cd ./tests && npx svps create",
      "posttests:create": "cp -f .svpsrc.example.js ./tests/.svpsrc.js",
      "pretests:connection": "sed -i '' -E '/(repare|apt|firewall|users|certificate|apache|php|node|mysql|crontab)/ s/true/false/' ./tests/.svpsrc.js",
      "tests:connection": "cd ./tests && npx svps mount",
      "posttests:connection": "sed -i '' -E '/(repare|apt|firewall|users|certificate|apache|php|node|mysql|crontab)/ s/false/true/' ./tests/.svpsrc.js",
      "tests:mount": "cd ./tests && npx svps mount",
      "tests:reset": "npm run docker:reset; rm -rf ./tests"
   },
   "author": "https://github.com/wellwelwel",
   "license": "MIT",
   "description": "ðŸš€ A simple CLI tool to automate the setup and pre-settings of your Ubuntu VPS",
   "engines": {
      "node": ">=14.5.0",
      "npm": ">=7.0.2"
   },
   "repository": {
      "type": "git",
      "url": "git+https://github.com/wellwelwel/svps.git"
   },
   "bugs": {
      "url": "https://github.com/wellwelwel/svps/issues"
   },
   "homepage": "https://github.com/wellwelwel/svps#readme",
   "keywords": [
      "apache",
      "cli",
      "cronjobs",
      "crontab",
      "ufw",
      "sftp",
      "vsftpd",
      "mysql",
      "php",
      "ssh",
      "ssh2",
      "ubuntu",
      "virtualhost",
      "vps",
      "vps-setup"
   ],
   "files": [
      "bin",
      "lib",
      "resources"
   ]
}
